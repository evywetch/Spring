	<bean id="logger" class="com.spring.Logger2" autowire="byName"></bean>
	<bean id="consoleWriter" class="com.spring.ConsoleWriter"></bean>
	<bean id="fileWriter" class="com.spring.FileWriter"></bean>

</beans>



